{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "lib": [
            "ES2022"
        ],
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "types": [
            "node",
            "@cucumber/cucumber",
            "@playwright/test"
        ]
    },
    "include": [
        "src/**/*",
        "features/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "reports"
    ],
    "ts-node": {
        "transpileOnly": true,
        "files": true
    }
}