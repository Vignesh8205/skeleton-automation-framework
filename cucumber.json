{
    "default": {
        "require": [
            "src/steps/**/*.ts",
            "src/support/**/*.ts"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "format": [
            "progress-bar",
            "html:reports/cucumber-report/cucumber-report.html",
            "json:reports/cucumber-report/cucumber-report.json",
            "junit:reports/cucumber-report/cucumber-report.xml"
        ],
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "worldParameters": {
            "appUrl": "https://apex-ui.itccompliance.co.uk/"
        },
        "parallel": 2,
        "retry": 1,
        "retryTagFilter": "@flaky",
        "timeout": 60000
    }
}