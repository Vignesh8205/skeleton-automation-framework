{
  "name": "skeleton-automation-framework",
  "version": "1.0.0",
  "description": "A reusable Playwright + TypeScript + Cucumber BDD automation framework for enterprise testing",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js",
    "test:headed": "cucumber-js --parallel 1",
    "test:parallel": "cucumber-js --parallel 2",
    "test:smoke": "cucumber-js --tags '@smoke'",
    "test:regression": "cucumber-js --tags '@regression'",
    "test:sanity": "cucumber-js --tags '@sanity'",
    "test:chromium": "BROWSER=chromium cucumber-js",
    "test:firefox": "BROWSER=firefox cucumber-js",
    "test:webkit": "BROWSER=webkit cucumber-js",
    "report": "ts-node src/utils/ReportGenerator.ts",
    "clean": "rimraf reports",
    "pretest": "npm run clean"
  },
  "keywords": [
    "playwright",
    "typescript",
    "cucumber",
    "bdd",
    "automation",
    "testing",
    "framework"
  ],
  "author": "Automation Team",
  "license": "MIT",
  "devDependencies": {
    "@cucumber/cucumber": "^10.3.1",
    "@playwright/test": "^1.41.0",
    "@types/node": "^20.11.5",
    "cucumber-html-reporter": "^7.1.1",
    "dotenv": "^16.4.1",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "winston": "^3.11.0"
  },
  "dependencies": {}
}